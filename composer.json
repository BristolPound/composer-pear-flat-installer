{
    "name": "bristolpound/pear-flat-installer",
    "type": "composer-installer",
    "license": "MIT",
    "description": "A PEAR library installer plugin for Composer",
    "keywords": [
        "installer",
        "PEAR"
    ],
    "homepage": "https://github.com/BristolPound/composer-pear-flat-installer/",
    "authors": [
        {
            "name": "Martin Rüegg",
            "email": "martin.rueegg@bristolpound.org",
            "homepage": "https://github.com/martin.rueegg"
        }
    ],
    "autoload": {
        "psr-0": { "Composer\\Installers\\": "src/" }
    },
    "extra": {
        "class": "Composer\\Installers\\Installer",
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "replace": {
        "shama/baton": "*",
        "roundcube/plugin-installer": "*"
    },
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "phpunit/phpunit": "4.1.*"
    }
}
